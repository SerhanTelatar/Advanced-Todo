    <form action="/todo" method="post">
        <div class="container">
            <h2>Completed Tasks</h2>
            <ul class="list-group my-5">
                <% texts.forEach((text)=>{ %>
                    <% if(text.completed){ %>
                        <li class="list-group-item">
                            <h3>
                                <%= text.text %>
                                <div style="display: flex; justify-content: right; text-align: start;">
                                    <button style="height: 50px; width: 70px; background-color: blue; border-radius: 5px;" type="button">
                                        <a href="/todo/getBackTask/<%= text._id %>" style="color: white; text-decoration: none;">
                                            <i class="fa fa-repeat" style="display: flex; justify-content: center; align-items: center;"></i>
                                        </a> 
                                    </button>
                                    <button style="height: 50px; width: 70px; background-color: red; margin-left: 30px; border-radius: 5px; position: relative;" type="button">
                                        <a href="/todo/delete/<%= text._id %>" style="color: white; text-decoration: none;">
                                            <i class="fa fa-trash" style="display: flex; justify-content: center; align-items: center;"></i>
                                        </a>  
                                    </button>
                                </div>
                            </h3>
                        </li>
                    <% } %> 
                <% }) %>
            </ul>
        </div>
    </form>
    
<script>
    var button = document.getElementById("click");

    button.addEventListener("click", (event)=> {
    
    if (event.keyCode === 13) {
        event.preventDefault();
        document.getElementById("click").click();
    }
    });
</script>
